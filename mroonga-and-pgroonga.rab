  # coderay sql

  CREATE INDEX entries_similar_search
    ON entries
    USING PGroonga (
      id,
      -- pg...v2の指定がポイント
      content pgroonga.text_full_text_search_ops_v2
      -- TokenMecabを使うと精度向上
    ) WITH (tokenizer='TokenMecab');

